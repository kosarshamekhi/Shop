@using Shop.Model.Products;

@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index"; 
}

<partial name="_Notification" />

<div class="container p-3 ">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                لیست محصولات
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus"></i> ایجاد دسته جدید
            </a>
        </div>
    </div>
    <br />

    <table class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>
                    نام محصول

                </th>
                <th>
                    مقدار محصول

                </th>
                <th>
                    واحد اندازه گیری
                </th>
                <th>
                    ویرایش
                </th>
                <th>
                    حذف
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="30%">
                        @obj.Name
                    </td>
                    <td width="25%">
                        @obj.Quantity
                    </td>
                    <td width="25%">
                        @obj.Unit
                    </td>
                    <td width="10%">
                        <div>
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="w-50 btn-group" role="group">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </div>
                    </td>
                    <td width="10%">
                        <div>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="w-50 btn-group" role="group">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
