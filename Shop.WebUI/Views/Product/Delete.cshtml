@using Shop.Model.Products;

@model Product
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" type="hidden"/>
    <div class="border p-3 mt 4">
            <h2>حذف محصول</h2>
        <div class="row pb-2">
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Unit"></label>
            <input asp-for="Unit" class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">
            حذف محصول
        </button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
            بازگشت به لیست
        </a>
    </div>
</form>
